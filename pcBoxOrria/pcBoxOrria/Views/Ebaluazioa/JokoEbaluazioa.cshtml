@using System.Diagnostics
@model pcBoxOrria.ViewModels.EbaluazioaViewModel
@try
{
    var posizioa = 0;
    float ebalMahiKingdom = 0, ebalZombieKiller = 0, ebalpouni = 0, ebaljohnny = 0;
    int mahiKingdomCount = 1, zombieKillerCount = 1, pouniCount = 1, johnnyCount = 1;

    foreach(var ebaluazioa in Model.EbaluazioaViewModelList)
    {
        if (ebaluazioa.jokua.Equals("mahiKingdom"))
        {
            ebalMahiKingdom = ebalMahiKingdom + @ebaluazioa.total;
            mahiKingdomCount++;
        }
        if (ebaluazioa.jokua.Equals("zombieKiller"))
        {
            ebalZombieKiller = ebalZombieKiller + @ebaluazioa.total;
            zombieKillerCount++;
        }
        if (ebaluazioa.jokua.Equals("pouni"))
        {
            ebalpouni = ebalpouni + @ebaluazioa.total;
            pouniCount++;
        }
        if (ebaluazioa.jokua.Equals("johnny"))
        {
            ebaljohnny = ebaljohnny + @ebaluazioa.total;
            johnnyCount++;
        }
        posizioa = posizioa + 1;
    }
    ebalMahiKingdom = ebalMahiKingdom / mahiKingdomCount;
    ebalZombieKiller = ebalZombieKiller / zombieKillerCount;
    ebalpouni = ebalpouni / pouniCount;
    ebaljohnny = ebaljohnny / johnnyCount;


